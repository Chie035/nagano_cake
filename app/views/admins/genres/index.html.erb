<div class="container">
    <div class="row">
        <h2>ジャンル一覧・追加</h2>
    </div>
    
    <div class="row">
        <%= form_with model: @genre, url: admins_genres_path, local:true do |f| %>
        <div class="form-group">
            <label for="name">ジャンル名</label>
            <%= f.text_field :name %>
            <%= f.submit "新規登録", class:"btn btn-success" %>
        </div>
       <% end %>
        
    </div>
    
    <div class="row">
        <div class="genre-table">
            <table class="table">
                <thead>
                    <tr>
                    <th>ジャンル</th>
                    <th colspan="3"></th>
                    <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <% @genres.each do |genre| %>
                    <td><%= genre.name %></td>
                    <td><%=link_to "編集する", edit_admins_genre_path(genre.id), class:"btn btn-success" %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>