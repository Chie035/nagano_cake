<div class="cotainer mx-5">
    <div class="row">
        <h4>注文履歴一覧</h4>
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr class="table-active">
                    <th>購入日時</th>
                    <th>購入者</th>
                    <th>注文個数</th>
                    <th>注文ステータス</th>
                </tr>
            </thead>
            <tbody>
                <% @orders.each do |order| %>
                <tr>
                    <td><%= link_to admins_order_path(order.id) do %>
                        <%= order.created_at.strftime("%y-%m-%d %H:%M") %>
                        <% end %>
                    </td>
                    <td><%= order.costomer.full_name %></td>
                    <td><%= order.order_items.count %></td>
                    <td><%= order.order_received %></td>
                </tr>
                <% end %>
               
            </tbody>
        </table>
         
    </div>
    <div class="row">
        <div class="mx-auto">
            <%= paginate @orders %>
        </div>
        
    </div>
    
</div>