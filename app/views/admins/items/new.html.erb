<div class="container">
    <div class="row">
        <div class="form-title">
            <h2>新規商品登録</h2>
        </div>
    </div>
    
    <div class="row">
        <div class="form-box">
            <%= form_with model: @item, url: admins_items_path, local:true do |f| %>
            
            <div class="form-group">
                <label for="image_">商品画像</label>
                <%= f.attachment_field :image %>
            </div>
            <div class="form-group">
                <label for="name">商品名</label>
                <%= f.text_field :name %>
            </div>
            <div class="form-group">
                <label for="introduction">商品説明</label>
                <%= f.text_area :introduction %>
            </div>
            <div class="form-group">
                <lavel for="genre_id">ジャンル</lavel>
                <%= f.select :genre_id, [["ケーキ",1],["焼き菓子",2]],incllude_blank: "選択してください" %>
            </div>
            <div class="form_group">
                <label for="price">税抜価格</label>
                <%= f.text_field :price %>円
            </div>
            <div class="form_group">
                <label for="is_active">販売ステータス</label>
               <%= f.radio_button :is_active, :true %>
               <%= f.label :is_active_true, '販売中' %>
               <%= f.radio_button :is_active, :false, class:"ml-3" %>
               <%= f.label :is_active_false, '販売停止中' %>
              </div>
            <div class="action">
                <%= f.submit "新規登録", class:"btn btn-success" %>
            </div>
            <% end %>
        </div>
    </div>
</div>