<div class="container">
    <div class="row">
        <h2>商品詳細</h2>
    </div>
    
    <div class="row">
        <div class="col-md-3">
            <%= attachment_image_tag @item, :image, :fill, 200,200 %>
        </div>
        <div class="col-md-8 offset-1">
            <div class="item-body">
                <table>
                    <tbody>
                        <tr>
                            <td>商品名</td>
                                <td>
                                    <%= @item.name %>
                                </td>
                        </tr>
                        <tr>
                            <td>商品説明</td>
                            <td>
                                <%= @item.introduction %>
                            </td>
                        </tr>
                        <tr>
                            <td>ジャンル</td>
                            <td>
                                <%= @item.genre.name %>
                            </td>
                        </tr>
                        <tr>
                            <td>
                               税込価格</br>
                                (税抜価格）
                                </td>
                            <td>
                                <%= @item.add_tax_price.to_s(:delimited) %>　(<%= @item.price %>)円
                            </td>
                            
                        </tr>
                        <tr>
                            <td>販売ステータス</td>
                            <td>
                                <%if @item.is_active == true %>
                                <p class="text-success">販売中</p>
                                <% else %>
                                <p>販売停止中</p>
                                <% end %>
                            </td>
                        </tr>
                        <tr>
                            <td><%= link_to "編集する", edit_admins_item_path, class:"btn btn-success" %></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>