<div class="container">
    <div class="row">
        <h3>会員情報編集</h3>
    </div>
    
    <div class="row">
        <div class="col-md-10 offset-2">
            <%= form_with model: @costomer, url: costomers_path, local:true do |f| %>
     
               <p>名前</p>
              <div class="form-group">
              <label for="last_name">（姓）</label>
              <%= f.text_field :last_name, autofocus: true, class:"form-control col-sm-4"%>
              </div>
             
              <div class="form-group ">
              <label for="first_name">（名）</label>
              <%= f.text_field :first_name, autofocus: true, class:"form-control col-sm-4" %>
              </div>
            
        
             
               <p>フリガナ</p>
               
              <div class="form-group">
              <label for="last_name_kana">（セイ）</label>
              <%= f.text_field :last_name_kana, autofocus: true, class:"form-control"%>
              </div>
              <div class="form-group">
              <label for="first_name_kana">（メイ）</label>
              <%= f.text_field :first_name_kana, autofocus: true, class:"form-control" %>
              </div>
             
             <div class="form-group">
                 <label for="postal_code">郵便番号（ハイフンなし）</label>
                 <%= f.text_field :postal_code, autofocus: true, class:"form-control" %>
             </div>
             
             <div class="form-group">
                 <label for="address">住所</label>
                 <%= f.text_field :address, autofocus: true, class:"form-control" %>
             </div>
             
             <div class="form-group">
                 <label for="telephone_number">電話番号（ハイフンなし）</label>
                 <%= f.text_field :telephone_number, autofocus: true, class:"form-control" %>
             </div>
             
              <div class="form-group">
              <label for="email">メールアドレス</label>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
             </div>


             <div class="actions d-inline-block">
             <%= f.submit "編集内容を保存", class:"btn btn-success" %>
             </div>
             <div class="d-inline-block ml-5">
                 <%= link_to "退会する", resign_costomers_path, class:"btn btn-danger" %>
             </div>
          <% end %>
             
        </div>
    </div>
</div>