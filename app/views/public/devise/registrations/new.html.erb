<div class="container sm-12 md-8 lg-5 px-5 px-sm-0">
  <div class="row">
     <h2 class="background-secondary">新規登録</h2>
  </div>
  
  <div class="row">
    <div class="col-md-10 mx-auto">
     <%= form_with model: @costomer, url: costomer_registration_path, id: "new_costomer", class:"new_costomer", local:true do |f| %>
     <%= render "devise/shared/error_messages", resource: resource %>
     
               <p>名前</p>
              <div class="form-group">
              <label for="last_name">（姓）</label>
              <%= f.text_field :last_name, autofocus: true, class:"form-control col-sm-4"%>
              </div>
             
              <div class="form-group ">
              <label for="first_name">（名）</label>
              <%= f.text_field :first_name, autofocus: true, class:"form-control col-sm-4" %>
              </div>
            
        
             
               <p>フリガナ</p>
               
              <div class="form-group">
              <label for="last_name_kana">（セイ）</label>
              <%= f.text_field :last_name_kana, autofocus: true, class:"form-control"%>
              </div>
              <div class="form-group">
              <label for="first_name_kana">（メイ）</label>
              <%= f.text_field :first_name_kana, autofocus: true, class:"form-control" %>
              </div>
             
    
             <div class="form-group">
              <label for="email">メールアドレス</label>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
             </div>
             
             <div class="form-group">
                 <label for="postal_code">郵便番号（ハイフンなし）</label>
                 <%= f.text_field :postal_code, autofocus: true, class:"form-control" %>
             </div>
             
             <div class="form-group">
                 <label for="address">住所</label>
                 <%= f.text_field :address, autofocus: true, class:"form-control" %>
             </div>
             
             <div class="form-group">
                 <label for="telephone_number">電話番号（ハイフンなし）</label>
                 <%= f.text_field :telephone_number, autofocus: true, class:"form-control" %>
             </div>

             <div class="form-group">
             <label for="password">パスワード</label>
             <% if @minimum_password_length %>
             <em>(<%= @minimum_password_length %> 文字以上)</em>
             <% end %><br />
             <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
             </div>

             <div class="form-group">
              <label for="password_confirmation">パスワード（確認用)</label>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
             </div>

             <div class="actions">
             <%= f.submit "新規登録", class:"btn btn-success" %>
             </div>
          <% end %>
        </div>
   
 

      <div class="row">
        <h2>既に登録済みの方</h2>  
       <%= render "devise/shared/links" %>
     </div>
</div>
