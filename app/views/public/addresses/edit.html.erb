<div class="container">
    <div class="row">
        <h3>配送先編集</h3>
    </div>
    
    <div class="row">
         <div class="edit-address-box">
        <%= form_with model: @address, url: address_path, local:true do |f| %>
        <div class="form-group">
            <label for="postal_code">郵便番号（ハイフンなし）</label>
            <%= f.text_field :postal_code %>
        </div>
        <div class="form-group">
            <label for="address">住所</label>
            <%= f.text_field :address %>
        </div>
        <div class="form-group d-inline-block">
            <label for="name">宛名</label>
            <%= f.text_field :name %>
        </div>
        <div class="action d-inline-block">
           <%= f.submit "変更内容を保存", class:"btn btn-success" %>
        </div>
        <% end %>
        </div>
    </div>
</div>