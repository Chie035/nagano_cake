<div class="container">
    <div class="row">
        <h3>注文情報入力</h3>
    </div>
    
    <div class="row">
        <div class="paymethod-box">
            <%= form_with model: @order, url: orders_path, local:true do |f| %>
            
            <h5>支払方法</h5>
            <div class="form-group">
            <%= f.radio_button :payment_method, 0 %>
            <%= f.label :payment_method, "クレジットカード" %>
            </div>
            <div class="form-group">
            <%= f.radio_button :payment_method, 1 %>
            <%= f.label :payment_method, "銀行振込" %>
            </div>
            
            <%# end %>
        </div>
    </div>
        
        <div class="row mt-5">
        <div class="addresses-box">
            
            <h5>お届け先</h5>
            
            <div class="form-group">
                <%= f.radio_button :postal_code, :address, :name %>
                <%= f.label :postal_code, :address, :name, "ご自身の住所" %>
                <p>〒<%= @order.costomer.postal_code %>　<%=@order.costomer.address %></p>
                <%= @order.costomer.last_name %><%= @order.costomer.first_name %>
            </div>
            
            <div class="from-group">
                <label>登録先の住所</label>
            </div>
            
            <div class="form-group">
            <div class="new-address-box">
            <%= form_with model: @address, url: addresses_path, local:true do |f| %>
            
            <div class="form-group">
            <label for ="postal_code">郵便番号（ハイフンなし）</label>
            <%= f.text_field :postal_code %>
            </div>
            <div class="form-group">
            <label for ="address">住所</label>
            <%= f.text_field :address %>
            </div>
            <div class="form-group">
            <label for="name">宛名</label>
            <%= f.text_field :name %>
            </div>
            
            <% end %>
            </div>
            
            </div>
            <% end %>
            
        </div>
    </div>
    
</div>