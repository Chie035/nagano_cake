<div class="container">
    <div class="row">
        <h4>注文情報確認</h4>
    </div>
    
    <div class="row">
        <div class="col-md-8 offset-1">
        <table class="table">
            <thead>
                <tr class="active">
                    <th>商品名</th>
                    <th>単価（税込）</th>
                    <th>数量</th>
                    <th>小計</th>
                </tr>
                </thead>
                <tbody>
                    <tr>
                        <% @sum = 0 %>
                        <% current_costomer.cart_items.each do |cart_item| %>
                        <td>
                            <%= attachment_image_tag cart_item.item, :image, :fill, 60, 60 %>
                            <%= cart_item.item.name %>
                        </td>
                        <td>
                            <%= cart_item.item.add_tax_price.to_s(:delimited)%>
                        </td>
                        <td>
                            <%= cart_item.amount %>
                        </td>
                        <td>
                            <%= cart_item.item.add_tax_price * cart_item.amount %>
                        </td>
                        <td>
                            <% @sum += cart_item.add_tax_price * cart_item.amount %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
                

        </table>
        </div>
        
        <div class="col-md-3">
            <table class="table border">
                <tbody>
                    <tr>
                        <th>送料</th>
                        <td><%= @order.shipping_cost %></td>
                    </tr>
                    <tr>
                        <th>商品合計</th>
                        <td><%= @sum %></td>
                    </tr>
                    <tr>
                        <th>請求金額</th>
                        <td><%= @order.shipping_cost + @sum %></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="row">
        <h6>支払方法</h6>
        <p class="ml-3"><%= @order.payment_method %></p>
    </div>
    
    <div class="row">
        <h6>お届け先</h6>
        <p class="ml-3">〒<%= @order.postal_code %> <%= @order.address %></br>
        <%= @order.name %></p>
    </div>
    
    <div class="row">
       <%= form_with model: @order, local:true do |f| %>
       <%= f.hidden_field :payment_method, value: @order.payment_method %>
       <%= f.hidden_field :name, value: @order.name %>
       <%= f.hidden_field :postal_code, value: @order.postal_code %>
       <%= f.hidden_field :address, value: @order.address %>
       <%= f.hidden_field :shipping_cost, value: @order.shipping_cost %>
    
       <%= f.submit "注文を確定する", class:"btn btn-primary" %>
       <% end %>
    </div>
</div>