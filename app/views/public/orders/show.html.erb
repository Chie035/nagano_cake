<div class="container">
    <div class="row">
        <h4>注文履歴詳細</h4>
    </div>
    
    <div class="row">
        <div class="col-md-5">
            <h6>注文情報</h6>
            <table class="table border">
                <tbody>
                    <tr>
                        <td class="table-active">注文日</td>
                        <td><%= @order.created_at.strftime("%y/%m/%d") %></td>
                    </tr>
                    <tr>
                        <td class="table-active">配送先</td>
                        <td>〒<%= @order.postal_code %></br>
                            <%= @order.address %></br>
                            <%= @order.name %>
                        </td>
                    </tr>
                    <tr>
                        <td class="table-active">支払金額</td>
                        <td><%= @order.payment_method %></td>
                    </tr>
                    <tr>
                        <td class="table-active">ステータス</td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-4 offset-3">
            <h6>請求金額</h6>
            <table class="table border">
                <tbody>
                    <tr>
                        <td class="table-active">商品合計</td>
                        <td>
                            <% @sum = 0 %>
                            <% @order_items.each do |order_item| %>
                            <% order_item.add_tax_price * order_item.amount %>
                            <% @sum += order_item.add_tax_price * order_item.amount %>
                            <% end %>
                            <%= @sum %>
                        </td>
                            
                    </tr>
                    <tr>
                        <td class="table-active">配送料</td>
                        <td><%= @order.shipping_cost %></td>
                    </tr>
                    <tr>
                        <th class="table-active">ご請求額</th>
                        <td><%= @order.shipping_cost + @sum %></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <h6>注文内容</h6>
        <table class="table border">
            <thead>
                <tr class="table-active">
                    <td>商品</td>
                    <td>単価（税込）</td>
                    <td>個数</td>
                    <td>小計</td>
                </tr>
            </thead>
            <tbody>
                <% @order_items.each do |order_item| %>
                <tr>
                    <td>
                        <%= order_item.item.name %>
                    </td>
                    <td>
                        <%= order_item.add_tax_price %>
                    </td>
                    <td>
                        <%= order_item.amount %>
                    </td>
                    <td>
                        <%= order_item.add_tax_price * order_item.amount %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>